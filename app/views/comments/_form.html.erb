<% if @question %>
  <%= form_for @comment do |f| %>
    <%= f.label :body %> <br>
    <%= f.text_area :body, rows: 10, cols: 100 %> <br>
    <%= hidden_field_tag 'question', "#{@question.id}" %>
    <%= f.submit %>
  <% end %>
<% elsif @answer %>
  <%= form_for @comment do |f| %>
    <%= f.label :body %> <br>
    <%= f.text_area :body, rows: 10, cols: 100 %> <br>
    <%= hidden_field_tag 'answer', "#{@answer.id}" %>
    <%= f.submit %>
  <% end %>
<% end %>
